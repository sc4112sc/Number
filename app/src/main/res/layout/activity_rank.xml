<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RankActivity"
    android:orientation="vertical"
    android:background="@drawable/c43234">

    <TextView
        android:id="@+id/rank_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="32dp"
    ></TextView>

    <TextView
        android:id="@+id/rank_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="排行榜"
        android:gravity="center"
        android:textSize="32dp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_below="@id/rank_top"></TextView>

    <FrameLayout
        android:id="@+id/rank_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rank_allBtn"
        android:layout_below="@id/rank_title"/>


    <LinearLayout
        android:id="@+id/rank_allBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"

        >
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:onClick="toF1"
            android:text="3位數"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:onClick="toF2"
            android:text="4位數"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:onClick="toF3"
            android:text="5位數"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:onClick="toF4"
            android:text="6位數"/>
    </LinearLayout>



</RelativeLayout>